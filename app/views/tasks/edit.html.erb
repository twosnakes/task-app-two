<h1>Edit Task</h1>

  <%= form_tag "/tasks/#{ @task.id }", method: :patch do %>

    <div class="new-item-form">
      Task Name: <input required="true" type="text" name="title" value="<%= @task.title%>">
    </div>

    <div class="new-item-form">
      Task Deadline: <input type="date" name="deadline" value="<%= @task.deadline %>" min="Date.today">
    </div>

    <input type="submit" value="Update">

<% end %>